
@{
    ViewBag.Title = "Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.BeginForm("Images", "Products", FormMethod.Post, new { enctype = "multipart/form-data" });

    foreach (var item in @ViewBag.products)
    {

        <table>
            <tr>
                <td>
                    <input type="hidden" name="id" value="@item.Id" />
                </td>
                <td>
                    <input type="file" name="file" />
                </td>
                <td>
                    <input type="submit" value="Save" />
                </td>
            </tr>
        </table>
    }

}
<hr />
<div>
    @foreach (var i in @ViewBag.imgs)
    {
        <img src="~/Content/Images/@i.Imagename" width="100" height="100" />
        <a href="@Url.Action("DeleteImage",new { id=i.Id})">Delete</a>
    }
</div>

